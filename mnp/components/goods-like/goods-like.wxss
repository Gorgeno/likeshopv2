/* components/goods-like/goods-like.wxss */
.goods-like .title {
    height: 100rpx;
    padding: 0 20rpx;
}

.goods-like .title .line {
    width: 58rpx;
    height: 1px;
    background-color: #ccc;
    margin: 0 22rpx;
}

.goods-like .title image {
    width: 38rpx;
    height: 38rpx;
}

.goods-like .title .like {
    padding: 1rpx 11rpx;
    background: linear-gradient(180deg, rgba(255, 44, 60, 1) 0%, rgba(249, 95, 47, 1) 100%);
    border-radius: 100px 100px 100px 0px;
}

.goods-like .goods {
    padding-bottom: 10rpx;
}

.goods-like .goods .goods-item {
    width: 240rpx;
    margin-left: 20rpx;
    display: inline-block;
}

.goods-like .goods .goods-item:last-of-type {
    margin-right: 20rpx;
}