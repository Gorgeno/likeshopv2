/* pages/shop_cart/shop_cart.wxss */
.shop-cart .main {
    padding-bottom: 100rpx;
}
.cart-list .cart-item {
    margin: 20rpx 20rpx 0;
    border-radius: 10rpx;
}
.cart-list .select {
    height: 80rpx;
    padding: 0 20rpx;
    border-bottom: var(--border);
}


.shop-cart .cart-null .btn {
    border: 1rpx solid var(--primary-color);
    width: 184rpx;
    margin-left: auto;
    margin-right: auto;
    padding: 8rpx 24rpx;
}

.shop-cart .footer {
    position: fixed;
    padding: 0 24rpx;
    width: 100%;
    height: 100rpx;
    box-shadow: 0px 0px 12px rgba(0, 0, 0, 0.1);
    bottom: 0;
    box-sizing: border-box;
    z-index: 1000;
}

.shop-cart .footer .all-price {
    text-align: right;
    flex: 1;
}

.shop-cart .footer .right-btn {
    padding: 13rpx 45rpx;
    background: linear-gradient(90deg, rgba(249, 95, 47, 1) 0%, rgba(255, 44, 60, 1) 100%);
}

.shop-cart .login {
    height: 100vh;
    background: #fff;
    text-align: center;
}

.shop-cart .login .btn image {
    width: 50rpx;
    height: 50rpx;
}

.shop-cart .login .btn {
    background-color: #09BB07;
    width: 280rpx;
    line-height: 70rpx;
    margin: 40rpx auto 0;
}