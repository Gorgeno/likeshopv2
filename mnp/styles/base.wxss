page {
    /* 定义一些主题色及基础样式 */
    --primary-color: #FF2C3C;
    --border: 1rpx solid #E5E5E5;
    font-family: PingFang SC, Arial, Hiragino Sans GB, Microsoft YaHei, sans-serif;
    font-size: 28rpx;
    color: #333;
    background-color: #F6F6F6;
    padding-bottom: env(safe-area-inset-bottom);
}

.bold {
    font-weight: bold;
}
/* 定义字体颜色 */
.primary {
    color: var(--primary-color);
}

.bd-primary {
    border: 1rpx solid var(--primary-color);
}

.bg-primary {
    background-color: var(--primary-color);
}
.bg-white {
    background-color: #fff;
}
.bg-body {
    background-color: #F6F6F6;
}

.bg-gray {
    background-color: #F4F4F4;
}

.black {
    color: #101010;
}

.white {
    color: #fff;
}

.normal {
    color: #333;
}

.lighter {
    color: #666;
}

.muted {
    color: #999;
}

/* 定义字体大小 */

.xxl {
    font-size: 36rpx;
}

.xl {
    font-size: 34rpx;
}

.lg {
    font-size: 32rpx;
}

.md {
    font-size: 30rpx;
}
.nr {
  font-size: 28rpx;
}
.sm {
    font-size: 26rpx;
}

.xs {
    font-size: 24rpx;
}

.xxs {
    font-size: 22rpx;
}

/* 定义常用外边距 */

.ml5 {
    margin-left: 5rpx;
}

.ml10 {
    margin-left: 10rpx;
}

.ml20 {
    margin-left: 20rpx;
}

.ml30 {
    margin-left: 30rpx;
}

.mr5 {
    margin-right: 5rpx;
}

.mr10 {
    margin-right: 10rpx;
}

.mr20 {
    margin-right: 20rpx;
}

.mr30 {
    margin-right: 30rpx;
}

.mt5 {
    margin-top: 5rpx;
}

.mt10 {
    margin-top: 10rpx;
}

.mt20 {
    margin-top: 20rpx;
}

.mt30 {
    margin-top: 30rpx;
}

.mb5 {
    margin-bottom: 5rpx;
}

.mb10 {
    margin-bottom: 10rpx;
}

.mb20 {
    margin-bottom: 20rpx;
}

.mb30 {
    margin-bottom: 30rpx;
}

/* 定义常用的弹性布局 */
.wrap {
    flex-wrap: wrap;
}
.row {
    display: flex;
    align-items: center;
}

.row-center {
    display: flex;
    align-items: center;
    justify-content: center;
}

.row-end {
    display: flex;
    align-items: center;
    justify-content: flex-end;
}

.row-between {
    display: flex;
    align-items: center;
    justify-content: space-between;
}

.row-around {
    display: flex;
    align-items: center;
    justify-content: space-around;
}

.column {
    display: flex;
    flex-direction: column;
    justify-content: center;
}

.column-center {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
}

.column-around {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-around;
}

.column-end {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: flex-end;
}

.column-between {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-between;
}



/* 超出隐藏 */
.line1 {
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.line2 {
    word-break: break-all;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
}
/* 中划线 */
.line-through {
    text-decoration: line-through;
}
image {
    display: block;
}
/* 图标大小 */
.icon-sm {
    width: 30rpx;
    height: 30rpx;
    flex: none;
}

.icon {
    width: 34rpx;
    height: 34rpx;
    flex: none;
}
.icon-md {
    width: 44rpx;
    height: 44rpx;
    flex: none;
}
.icon-lg {
    width: 48rpx;
    height: 48rpx;
    flex: none;
}
.icon-xl {
    width: 58rpx;
    height: 58rpx;
    flex: none;
}
.img-null {
    width: 300rpx;
    height: 300rpx;
    flex: none;
}

.icon-xxl {
    width: 82rpx;
    height: 82rpx;
    flex: none;
}
/* br60 */
.br60 {
    border-radius: 60rpx;
}
/* 按钮大小 */
button[size="xs"]{
    line-height: 58rpx;
    height: 58rpx;
    font-size: 26rpx;
    padding: 0 30rpx;
}

button[size="sm"] {
    line-height: 62rpx;
    height: 62rpx;
    font-size: 28rpx;
    padding: 0 30rpx;
}

button[size="md"]{
    line-height: 70rpx;
    height: 70rpx;
    font-size: 30rpx;
    padding: 0 30rpx;
}
button[size="lg"]{
    line-height: 80rpx;
    height: 80rpx;
    font-size: 32rpx;
    padding: 0 30rpx;
}


.fixed {
    padding-bottom: env(safe-area-inset-bottom)!important;
}